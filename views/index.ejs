    <script>

        const locationFilter = document.querySelector('#location-index');

        const allOptions = ['Knoxville', 'Sevierville', "Pigeon-Forge", "Gatlingburg"]
        locationFilter.addEventListener('change', (e)=>{

        allOptions.filter( option => { 
            const propsToHide = document.querySelectorAll(`.${option}`);
            propsToHide.forEach(prop => {prop.style.display = 'block'});

            if(option != e.target.value ){
                    propsToHide.forEach(prop => {prop.style.display = 'none'})
            }
        })
            
        })
    </script>
